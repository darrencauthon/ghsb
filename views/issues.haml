:sass

  table
    width: 100%

  td

    &.number
      min-width: 64px
      max-width: 192px

    &.assignee
      width: 40px
      text-align: right

%table
  - for issue in @issues
    %tr
      %td.number== ##{ issue.number }
      %td.title= issue.title
      %td.assignee
        - if issue.assignee
          %img{ src: gravatar_for(issue.assignee.gravatar_id) }
